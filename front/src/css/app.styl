// app global css
@font-face
  font-family BarnaulGrotesk
  src url(./fonts/BarnaulGrotesk-Reg.woff)
@font-face
  font-family BarnaulGroteskMedium
  src url(./fonts/BarnaulGroteskMedium-Reg.woff)
@font-face
  font-family BarnaulGroteskBold
  src url(./fonts/BarnaulGroteskBold-Reg.woff)
@font-face
  font-family BarnaulGroteskExtraBold
  src url(./fonts/BarnaulGroteskExtraBold-Reg.woff)

body
  font-family 'BarnaulGrotesk'
  font-size: 16px

.barnaul
  font-family 'BarnaulGrotesk'

.barnaul-medium
  font-family 'BarnaulGroteskMedium'

.barnaul-bold
  font-family 'BarnaulGroteskBold'

.barnaul-extra-bold
  font-family 'BarnaulGroteskExtraBold'

#q-app
  font-family: 'BarnaulGrotesk'
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

.work-place
  max-width: 1200px
  height: 90vh
  margin: 0 auto
  @media screen and (max-height: 800px)
    height: 88vh

.card_size_l
  min-width: 600px
  width: 1100px
  max-width: 90vw

.drag-enter
  outline: 5px dashed #696969
  width: 100%
  height: 100%
  background: rgba(255, 255, 255, 0.5)
  z-index: 10 !important
  pointer-events: auto
